<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            android:text="--- Course Details ---"
            android:shadowColor="@android:color/black"
            android:layout_gravity="center"
            android:textColor="#03A2C8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/courseNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="40dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/courseCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:paddingBottom="30dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/courseDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:paddingBottom="30dp"
                android:textColor="@android:color/black" />



            <TextView
                android:id="@+id/courseStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:paddingBottom="30dp"
                android:textColor="@android:color/black" />



            <TextView
                android:id="@+id/courseLocations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:paddingBottom="30dp"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:onClick="registerBtn"
            android:background="@drawable/round_back_primary"
            android:textColor="#ffffff" />
    </LinearLayout>
</ScrollView>
