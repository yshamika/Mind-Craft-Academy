<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Setting the background color of the border -->
    <solid android:color="#6301AED8"/>



    <!-- Setting the corner radius of the border -->
    <corners android:radius="100dp"/> <!-- Adjust the corner radius as needed -->

    <!-- Padding for shadow -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</shape>
